# Environment variables for the Multi-Tenant Notes API

# Database Configuration
MONGODB_URL=mongodb://admin:password@localhost:27017/notes_api?authSource=admin
DATABASE_NAME=notes_api

# Application Configuration
APP_NAME=Multi-Tenant Notes API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=["*"]
ALLOWED_METHODS=["*"]
ALLOWED_HEADERS=["*"]
